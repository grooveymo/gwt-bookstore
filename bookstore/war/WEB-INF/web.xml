<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>bookstoreServlet</servlet-name>
    <servlet-class>com.prodcod.server.BookstoreServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>bookstoreServlet</servlet-name>
    <url-pattern>/bookstore/bookstore</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.prodcod.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/bookstore/login</url-pattern>
  </servlet-mapping>




  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Bookstore.html</welcome-file>
  </welcome-file-list>

</web-app>
