<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel tag='div' ui:field="fieldsPanel">
			<span ui:field="titleField" />
			<span ui:field="originatorField" />
			<span ui:field="priceField" />
		</g:HTMLPanel>
		<g:HTMLPanel tag='div' ui:field="buttonPanel">
			<g:Button styleName="{style.important}" ui:field="removeButton" >remove</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 