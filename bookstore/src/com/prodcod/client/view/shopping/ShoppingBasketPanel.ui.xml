<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<h1>Shopping Basket</h1>
		<g:ScrollPanel>
			<g:HTMLPanel ui:field="ShoppingBasketItemsPanel">
				<g:HTMLPanel tag='div' ui:field='numItemsPanel'>

					<g:Image ui:field='basketImage' />

					<span ui:field="numItems" />
				</g:HTMLPanel>

			</g:HTMLPanel>
		</g:ScrollPanel>
		<g:HTMLPanel>
			<g:Button styleName="{style.important}" ui:field="checkoutButton">checkout</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 