<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:com.prodcod.client.view.shopping">
	
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>

		<g:HTMLPanel tag ='div' ui:field='itemsPanel'>
			<div id='shopPanel' class='panel panel-primary'>
				<h1 class='panel-heading'>Shop Catalogue </h1>
				<h:SearchPanel ui:field="searchPanel" />		
				<g:ResizeLayoutPanel ui:field="tablePanel" />
			</div>			
			<div id='shoppingCartPanel' class='panel panel-info'>
				<h1 class='panel-heading'>Shopping Basket </h1>
				<h:ShoppingBasketPanel ui:field="shoppingBasketPanel"/>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 