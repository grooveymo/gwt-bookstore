<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>

		<div id='loginBody' class='container panel panel-primary'>

			<div class='panel-heading'>
				<h1> Login</h1>
			</div>
			<g:HTMLPanel tag='div' ui:field='validationPanel'>			
				<g:Label ui:field="validationMessage" />
			</g:HTMLPanel>


			<div class='row spacer'>
				<div id='leftSpacer' class="col-lg-4" />

				<div id='content' class="col-lg-4">
					<form class='form-inline'>
						<div id='loginPanel'>
							<div id='usernamePanel'>
								<label class="control-label">Username: </label>
								<g:TextBox ui:field="userName" />
							</div>
							<div id='passwordPanel'>
								<label class="control-label">Password: </label>
								<g:TextBox ui:field="password" />
							</div>
						</div>
					</form>
				</div>
				<div id='rightSpacer' class="col-lg-4" />
			</div>

<!-- 			<div id='submitPanel' class='row spacer'>
 -->
 			<div id='submitPanel' class='form-group'>
 
 				<div class="col-lg-2" />
				<div id='rightSpacer' class="col-sm-offset-2 col-sm-2">
					<g:Button ui:field='submitButton'>submit</g:Button>
				</div>
				<div id='registration' class="col-sm-2">
					<g:Anchor ui:field="registrationLink">register</g:Anchor>
				</div>

			</div>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 