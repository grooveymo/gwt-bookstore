<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel tag='div' ui:field='orderItemContainer'>

		<g:HTMLPanel tag='div' ui:field="orderItemfieldsPanel">

			<ul class='list-group'>
				<li class='list-group-item'>
					<span class='label label-info'>Title: </span>
					<span ui:field="titleField" />
				</li>
				<li class='list-group-item'>
					<span class='label label-info'>Author/Artist: </span>
					<span ui:field="originatorField" />
				</li>
				<li class='list-group-item'>
					<span class='label label-info'>Price: </span>
					<span ui:field="priceField" />
				</li>
				<li class='list-group-item'>
					<span class='label label-info'>Quantity: </span>
					<span ui:field="quantityField" />
				</li>
			</ul>
		</g:HTMLPanel>
		<g:HTMLPanel tag='div' ui:field="buttonPanel">
			<g:Button ui:field="removeButton">Remove</g:Button>
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 